<Page x:Class="_062_WPFCrud.Formulario"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_062_WPFCrud"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Formulario">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition ></RowDefinition>
            <RowDefinition ></RowDefinition>
            <RowDefinition Height="100"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="0" Grid.Row="0">Nombre</TextBlock>
        <TextBox Grid.Column="1" Grid.Row="0" Name="txtNombre"></TextBox>
        <TextBlock Grid.Column="0" Grid.Row="1">Edad</TextBlock>
        <TextBox Grid.Column="1" Grid.Row="1" Name="txtEdad"></TextBox>

        <Button Grid.Column="1" Grid.Row="2" Click="Button_Click">Guardad</Button>
    </Grid>
</Page>
